{% extends 'UciAdministradorBundle::base.html.twig' %}

{% block header %}
    <header id="head" class="secondary"></header>
    {% endblock %}

{% block body %}
    <!-- container -->
    <div class="container">

        <ol class="breadcrumb">
            <li><a href="{{ path('uci_administrador_homepage') }}">Inicio</a></li>
            <li class="active">Listado de Libros</li>
        </ol>
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-md-4 sidebar sidebar-left">
                {% include 'UciAdministradorBundle:Menus:mantenimientoLibro.html.twig' %}
            </aside>
            <!-- /Sidebar -->
            <!-- Article main content -->
            <article class="col-sm-8 maincontent">
                <header class="page-header">
                    <h1 class="page-title">Lista de Libros</h1>
                </header>
                <br>
                <!-- /Aquí va el contenido -->

                <div class="row">
                    <div class="col-sm-4">
                        <input id="filter" class="form-control" type="text" placeholder="Buscar">
                    </div>
                </div>
                <br>
                <table class="table demo table-bordered" id="tabla" data-filter="#filter">
                    <thead>
                        <tr>
                            <th data-toggle="true">
                                Titulo
                            </th>
                            <th data-hide="phone">
                                Año
                            </th>
                            <th data-hide="phone">
                                Idioma
                            </th>
                            <th data-hide="phone">
                                Pmbok
                            </th>
                            
                            <th data-sort-ignore="true" data-hide="phone" data-name="Acciones"></th>
                        </tr>
                    </thead>
                    <tbody> 
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('usuario_show', { 'id': entity.id }) }}">{{ entity.titulo }}</a></td>
                                <td>{{ entity.anio }}</td>
                                <td>{{ entity.idiomas }}</td>
                                {% if entity.esPmbok == 0 %}
                                <td><span class="status-metro status-disabled" title="Active">No</span></td>
                                {% else %}
                                 <td><span class="status-metro status-active" title="Active">Si</span></td>
                                {% endif %}
                                <td><a href="{{ path('uci_administrador_edituser', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                                    <a href="{{ path('uci_administrador_deleteuser', { 'id': entity.id }) }}" class="speedbump"><span class="navigationSpace glyphicon glyphicon-remove"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <!-- /Aquí acaba el contenido --> 
            </article>
            <!-- /Article -->
        </div>
    </div>	<!-- /container -->

{% endblock %}





{% extends 'UciAdministradorBundle::base.html.twig' %}

{% block header %}
    <header id="head" class="secondary"></header>
    {% endblock %}

{% block body %}
    <!-- container -->
    <div class="container">

        <ol class="breadcrumb">
            <li><a href="{{ path('uci_administrador_homepage') }}">Inicio</a></li>
            <li><a href="{{ path('uci_administrador_indicepreguntas') }}">Listado de Preguntas</a></li>
            <li class="active">Registrar pregunta</li>
        </ol>
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-md-4 sidebar sidebar-left">
                {% include 'UciAdministradorBundle:Menus:mantenimientoPregunta.html.twig' %}
            </aside>
            <!-- /Sidebar -->
            <!-- Article main content -->
            <article class="col-sm-8 maincontent">
                <header class="page-header">
                    <h1 class="page-title">Nueva pregunta</h1>
                </header>
                <br>
                <!-- /Aquí va el contenido -->

                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h3 class="thin text-center">Registrar una nueva pregunta {{ tipoRespuesta.nombre }}</h3>
                            <p class="text-center text-muted">{{ tipoRespuesta.explicacion }}</p>
                            <hr>

                            {% if error %}
                                <div style="color:red">{{ error }}</div>
                            {% endif %}

                            <form action="{{ path('uci_administrador_registrarPregunta', { 'idTipoRespuesta': tipoRespuesta.id }) }}" method="POST" enctype="multipart/form-data">
                                <div class="row top-margin">
                                    <div class="cols-xs-12 col-sm-10 col-md-8 col-lg-8">
                                        {{ form_label(form.titulo) }}
                                        {{ form_errors(form.titulo) }}<br>
                                        {{ form_widget(form.titulo) }}
                                    </div>
                                </div>
                                <div class="row top-margin">
                                    <div class="cols-xs-12 col-sm-10 col-md-8 col-lg-8">
                                        {{ form_label(form.areaConocimiento) }}
                                        {{ form_errors(form.areaConocimiento) }}
                                        {{ form_widget(form.areaConocimiento) }}
                                    </div>
                                </div>
                                <div class="row top-margin">
                                    <div class="cols-xs-12 col-sm-10 col-md-8 col-lg-8">
                                        {{ form_label(form.capitulo) }}
                                        {{ form_errors(form.capitulo) }}
                                        {{ form_widget(form.capitulo) }}
                                    </div>
                                </div>
                                <div class="row top-margin">
                                    <div class="cols-xs-12 col-sm-10 col-md-8 col-lg-8">
                                        {{ form_label(form.grupoProcesos) }}
                                        {{ form_errors(form.grupoProcesos) }}
                                        {{ form_widget(form.grupoProcesos) }}
                                    </div>
                                </div>
                                <div class="row top-margin">
                                    <div class="cols-xs-12 col-sm-10 col-md-8 col-lg-8">
                                        {{ form_label(form.tipoPrueba) }}
                                        {{ form_errors(form.tipoPrueba) }}
                                        {{ form_widget(form.tipoPrueba) }}
                                    </div>
                                </div>
                                <div class="row top-margin">
                                    <div class="cols-xs-12 col-sm-10 col-md-8 col-lg-8">
                                        {{ form_label(form.libro) }}
                                        {{ form_errors(form.libro) }}
                                        {{ form_widget(form.libro) }}
                                    </div>
                                </div>
                                <br>
                                <div class="row top-margin">
                                    <div class="cols-xs-12 col-sm-10 col-md-8 col-lg-8">
                                        {{ form_label(form.respuesta) }}
                                        {{ form_errors(form.respuesta) }}
                                        {{ form_widget(form.respuesta) }}
                                    </div>
                                </div>
                                <div class="row top-margin">
                                    <div class="cols-xs-12 col-sm-10 col-md-8 col-lg-8">
                                        <a href="#" onclick="add();">Agregar pregunta</a>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-lg-8">                     
                                    </div>
                                    <div class="col-lg-4 text-right">
                                        <button class="btn btn-action" type="submit">Registrar</button>
                                    </div>
                                </div>
                                {{ form_rest(form) }}
                            </form>

                        </div>
                    </div>

                </div>


                <!-- /Aquí acaba el contenido --> 
            </article>
            <!-- /Article -->
        </div>
    </div>	<!-- /container -->

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">

        function add() {
            var collectionHolder = $('#uci_bundle_basedatosbundle_pregunta_respuesta');
            var prototype = collectionHolder.attr('data-prototype');
            form = prototype.replace(/__name__label__/g, 'Pregunta '+collectionHolder.children().length);
            collectionHolder.append(form);
        }

        document.ready = function () {

            $('table').footable().on('click', '.row-delete', function (e) {
                e.preventDefault();
            }
            );

            $('body').on('hidden.bs.modal', '.modal', function () {
                $('.modal-content', this).empty();
                $(this).removeData('bs.modal');
            });

            var handleSpeedBump = function (e) {
                e.preventDefault();
                var href = this.getAttribute("data-href");
                var sure = confirm("¿Esta seguro que desea realizar el borrado?\n (Esta operación no es reversible)");
                if (!sure)
                    return;
                document.location = href;
            };
            $("a.speedbump")
                    .click(handleSpeedBump)
                    .bind("contextmenu", handleSpeedBump)
                    .dblclick(handleSpeedBump)
                    .each(function () {
                        var href = this.href;
                        this.setAttribute("data-href", href);
                        this.href = "javascript:void('Navigate to " + href.replace("'", "") + "')";
                    });
        };
    </script>
{% endblock %}

